<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/item_theme_style_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_theme_style_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_10"
            android:includeFontPadding="false"
            android:text="8"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_38" />

        <TextView
            android:id="@+id/item_theme_style_month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:text="October"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_theme_style_week_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_48"
        android:text="Thursday"
        android:textColor="@color/color333333"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:id="@+id/item_theme_style_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_75"
        android:layout_marginEnd="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/color909094"
        android:textSize="@dimen/sp_13"
        tools:text="今天的你会非常的热心肠，能够关注和体谅到家人和朋友们的情绪，也会想要给予他人一些帮助，总会给旁人一种天降奇兵的感觉。今天的你会非常的热心肠，能够关注和体谅到家人和朋友们的情绪，也会想要给予他人一些帮助，总会给旁人一种天降奇兵的感觉。" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_20"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_theme_style_line"
            android:layout_width="3dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@color/color00D1CB" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_theme_style_day_lucky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宜"
                    android:includeFontPadding="false"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/item_theme_style_day_lucky_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:maxLength="4"
                    android:text="耐心等待"
                    android:textColor="@color/color85E9E6"
                    android:textSize="@dimen/sp_17" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_theme_style_day_bad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忌"
                    android:textColor="@color/color333333"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/item_theme_style_day_bad_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:maxLength="4"
                    android:text="急躁无序"
                    android:textColor="@color/colorFF9696"
                    android:textSize="@dimen/sp_17" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>