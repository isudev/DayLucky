<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_title_bar_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_30">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/app_title_bar_layout_start_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_title_bar_layout_start_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:text="#666666"
            android:textSize="16sp"
            android:visibility="invisible"
            tools:text="text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_title_bar_layout_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dp_70"
            android:layout_marginEnd="@dimen/dp_70"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#191919"
            android:textSize="@dimen/sp_17"
            tools:text="标题" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/app_title_bar_layout_end_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_title_bar_layout_end_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:textColor="#666666"
            android:textSize="16sp"
            android:visibility="invisible"
            tools:text="text" />

    </RelativeLayout>

</RelativeLayout>